<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Car Rental</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                Car Rental
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CarsCatalog" asp-action="Index">Cars Catalog</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Customers" asp-action="Index">Customers</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="RentalContracts" asp-action="Index">
                            Rental Contracts
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Payments" asp-action="Index">Payments</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employees" asp-action="Index">
                                Employees
                            </a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                Hello, @User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
